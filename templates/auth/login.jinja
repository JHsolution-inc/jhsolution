{% extends "base.jinja" %}

{% block content %}
	<section>
		<div class="container text-center">
			{% if status == "failed" %}
				<div class="alert alert-danger alert-dismissible">
					계정이 없거나 암호가 잘못되었습니다.
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			{% elif status == "registered" %}
				<div class="alert alert-success alert-dismissible">
					이메일 인증 후 로그인이 가능합니다.
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			{% endif %}

			<h1 class="display-5 fw-bolder mb-0 py-3 pb-5 text-center">
				<span class="text-gradient d-inline">로그인</span>
			</h1>

			<div class="row justify-content-center">
				<div class="col-auto">
					<div class="card shadow">
						<div class="card-body">

							<a href="/login/google" class="btn btn-primary mb-2" style="background-color: red;">구글 로그인</a>
							<hr class="hr"/>

							<form name="password-login" action="/login/password" method="POST">
								<div class="form-group px-5 fw-bolder row justify-content-md-center">
									<label class="form-label" for="email-or-HP">이메일/전화번호</label>
									<input type="text" id="email-or-HP" name="email_or_HP" class="form-control" required/>
								</div>
								<div class="py-2"></div>

								<div class="form-group px-5 fw-bolder row justify-content-md-center">
									<label class="form-label" for="password">암호</label>
									<input type="password" id="password" name="password" class="form-control" required/>
								</div>
								<div class="py-3"></div>

								<a href="/register" class="btn btn-outline-primary mx-2">화주 회원가입</a>
								<button type="submit" class="btn btn-primary mx-2">로그인</button>
							</form>

						</div>
					</div>
				</div>
			</div>

		</div>
	</section>
{% endblock %}
