{% extends "base.jinja" %}

{% block content %}
	<section>
		<div class="container text-center">
			<h1 class="display-5 fw-bolder mb-0 py-3 pb-5 text-center">
				<span class="text-gradient d-inline">회원가입</span>
			</h1>

			<div class="row justify-content-center">
				<div class="col-auto">
					<div class="card shadow">
						<div class="card-body">

							<form name="email_login" action="/register" method="POST">
								<label class="form-label" for="email">이메일</label>
								<input type="text" required
									id="email" name="email" class="form-control"
									pattern="^[\w\-\.]+@([\w\-]+\.)+[\w]+$"
									title="이메일 형식을 확인해 주세요"
								/>
								<div class="py-2"></div>

								<label class="form-label" for="password">암호</label>
								<input type="password" required
									id="password" name="password" class="form-control"
								/>
								<div class="py-2"></div>

								<div class="d-flex justify-content-center">
									<input class="form-check-input" id="agreement" type="checkbox" required>
									<label class="form-check-label" for="agreement">
										<a href="/terms">이용약관들</a>에 동의합니다.
									</label>
								</div>
								<div class="py-2"></div>

								<button type="submit" class="btn btn-primary mb-2">이메일 회원가입</button>
							</form>

						</div>
					</div>
				</div>
			</div>

		</div>
	</section>
{% endblock %}
